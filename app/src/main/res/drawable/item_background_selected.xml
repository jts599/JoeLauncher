<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Ripple Effect -->
    <item>
        <ripple android:color="?android:attr/colorControlHighlight">
            <item android:id="@android:id/mask">
                <shape android:shape="rectangle">
                    <solid android:color="@android:color/white" />
                </shape>
            </item>
        </ripple>
    </item>

    <!-- Border -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- Or a slightly different background for selected -->
            <stroke
                android:width="2dp"
                android:color="?attr/colorPrimary" /> <!-- Use your app's primary color or any color you like -->
            <corners android:radius="4dp" /> <!-- Optional: if you want rounded corners for the border -->
        </shape>
    </item>
</layer-list>