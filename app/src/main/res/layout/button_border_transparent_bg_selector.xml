<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <corners android:radius="4dp" />
            <stroke android:width="1dp" android:color="?attr/colorPrimary" />
        </shape>
    </item>
    <item android:state_pressed="true"> <!-- Optional: different look for pressed -->
         <shape android:shape="rectangle">
            <solid android:color="#10000000" /> <!-- Slight tint when pressed -->
            <corners android:radius="4dp" />
            <stroke android:width="1dp" android:color="?attr/colorPrimary" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <corners android:radius="4dp" />
            <!-- Optional: a very faint border for unselected state -->
            <!-- <stroke android:width="1dp" android:color="#E0E0E0" /> -->
        </shape>
    </item>
</selector>