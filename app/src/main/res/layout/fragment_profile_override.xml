<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profiles.ProfileOverrideFragment"> <!-- Adjust tools:context -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Title -->
            <TextView
                android:id="@+id/textViewOverrideTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceHeadline5"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="Switch to My Gaming Profile" />

            <!-- Override Duration Label -->
            <TextView
                android:id="@+id/textViewDurationLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Override Duration:"
                android:textAppearance="?attr/textAppearanceSubtitle1"
                app:layout_constraintTop_toBottomOf="@id/textViewOverrideTitle"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- Override Duration Options (Horizontal Flow for wrapping) -->
            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroupOverrideDuration"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:singleSelection="true"
                app:selectionRequired="true"
                app:chipSpacingHorizontal="8dp"
                app:layout_constraintTop_toBottomOf="@id/textViewDurationLabel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipDuration5m"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:minWidth="48dp"
                    android:text="5m" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipDuration10m"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:minWidth="48dp"
                    android:text="10m" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipDuration1h"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:minWidth="48dp"
                    android:text="1h" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipDurationCustom"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:minWidth="48dp"
                    android:text="Custom" />

            </com.google.android.material.chip.ChipGroup>


            <!-- Custom Date/Time Picker (Conditional Visibility) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonSelectCustomDateTime"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Select Expiry Date &amp; Time"
                android:visibility="gone" 
                app:icon="@drawable/ic_calendar_clock" 
                app:layout_constraintTop_toBottomOf="@id/chipGroupOverrideDuration"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:visibility="visible"/> <!-- Visible in preview -->

            <!-- Reason Field -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textFieldReasonLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/buttonSelectCustomDateTime"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:hint="Enter Reason for Override">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextReason"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapSentences|textMultiLine"
                    android:minLines="2"
                    android:gravity="top"
                    tools:ignore="SpeakableTextPresentCheck" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Spacer to push FAB down if content is short -->
            <Space
                android:layout_width="match_parent"
                android:layout_height="80dp"
                app:layout_constraintTop_toBottomOf="@id/textFieldReasonLayout"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="1.0"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabConfirmOverride"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        app:srcCompat="@drawable/ic_check"
        android:contentDescription="Confirm Override" /> <!-- You'll need a check/confirm icon -->

</androidx.coordinatorlayout.widget.CoordinatorLayout>